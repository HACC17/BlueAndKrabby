{ {{ $statutes := where .Site.Pages ".Params.type" "statute" }}{{ $len := (len $statutes) }}
  "statutes": { {{ range $index, $entry := $statutes }}
    "{{ .Params.hrs_structure.statute }}": {
      "title": "{{ htmlEscape .Params.full_title }}",
      "context": "{{ htmlEscape (replace .Plain "\n" " ") }}"
    }{{ if lt $index (sub $len 1) }},{{ end }}{{ end }}
  }
}